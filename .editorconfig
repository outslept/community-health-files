root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files allow trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML/CSS use 2 spaces per Google style guides
# https://google.github.io/styleguide/htmlcssguide.html#General_Formatting_Rules
[*.{html,css,scss,less,sass}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 2

# YAML files are indent-sensitive and community standard is 2 spaces
# https://yaml.org/spec/1.2.2/#61-indentation-spaces
[*.{yml,yaml}]
indent_size = 2
